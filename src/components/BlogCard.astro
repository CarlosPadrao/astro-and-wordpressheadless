---
interface Props {
  slug: string;
  title: string;
  excerpt: string;
  imageUrl?: string;
  category?: string;
  categorySlug?: string;
}

const { slug, title, excerpt, imageUrl = '/placeholder.jpg', category, categorySlug } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-100">
  <a href={`/post/${slug}`}>
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-48 object-cover"
    />
  </a>
  <div class="p-6">
    {category && categorySlug && (
      <a
        href={`/category/${categorySlug}`}
        class="inline-block px-3 py-1 text-sm font-semibold text-blue-600 bg-blue-100 rounded-full mb-2 hover:bg-blue-200 transition-colors"
      >
        {category}
      </a>
    )}
    <h2 class="text-2xl font-bold mb-2 text-gray-800">
      <a href={`/post/${slug}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h2>
    <a href={`/post/${slug}`} class="block hover:text-blue-600 transition-colors">
      <div class="text-gray-600 line-clamp-3 mb-4" set:html={excerpt} />
    </a>
  </div>
</article>